{
  "apiVersion": "0.1",
  "swaggerVersion": "1.2",
  "basePath": "/",
  "resourcePath": "users",
  "apis": [
    {
      "path": "api/users/sign_up.json",
      "operations": [
        {
          "summary": "Allow new user to create account",
          "notes": "Create user account and also setup first self contact for user using user email",
          "parameters": [
            {
              "paramType": "form",
              "name": "username",
              "type": "string",
              "description": "Unique string representing the user",
              "required": true
            },
            {
              "paramType": "form",
              "name": "email",
              "type": "string",
              "description": "User email, will be used to create first self contact",
              "required": true
            },
            {
              "paramType": "form",
              "name": "password",
              "type": "string",
              "description": null,
              "required": true
            },
            {
              "paramType": "form",
              "name": "password_confirmation",
              "type": "string",
              "description": null,
              "required": true
            }
          ],
          "responseMessages": [
            {
              "code": 422,
              "responseModel": null,
              "message": "username, email already exist | password does not match | internal server error"
            }
          ],
          "method": "post",
          "nickname": "Api::V1::Users#sign_up"
        }
      ]
    },
    {
      "path": "api/users/profile.json",
      "operations": [
        {
          "summary": "Return user information",
          "parameters": [
            {
              "paramType": "query",
              "name": "user_id",
              "type": "string",
              "description": "User Id",
              "required": true
            }
          ],
          "responseMessages": [
            {
              "code": 404,
              "responseModel": null,
              "message": "Not Found"
            }
          ],
          "method": "get",
          "nickname": "Api::V1::Users#profile"
        }
      ]
    },
    {
      "path": "api/users/search.json",
      "operations": [
        {
          "summary": "Search username and email by keyword. Return list of users",
          "parameters": [
            {
              "paramType": "query",
              "name": "keyword",
              "type": "string",
              "description": "Keyword to search for - matching both username and email",
              "required": true
            }
          ],
          "responseMessages": [
            {
              "code": 422,
              "responseModel": null,
              "message": "missing param keyword"
            }
          ],
          "method": "post",
          "nickname": "Api::V1::Users#search"
        }
      ]
    }
  ]
}